@page
@model Prestamos_Cajero.Pages.CajeroModel
@{
}

<div class="text-center">
    <h2 class="display-4">Cajero Automatico</h2>
</div>


<div class="container mt-4">
    
        <form method="get" class="container border border-primary bg-dark text-light">
            <h3 class="text-center my-4">Inserte sus datos</h3>

            <label class=" ml-3 form-label">Seleccione su banco</label>
            <select class="form-control mb-4" name="banco" >
                <option value="BancoABC" class="form-control mb-4">Banco ABC</option>
                <option value="BancoPopular" class="form-control mb-4">Banco Popular</option>
                <option value="BancoAdemi" class="form-control mb-4">Banco Ademi</option>
            </select>

            <label class=" ml-3 form-label">Monto a Retirar</label>
            <input type="number" class="form-control mb-4" name="monto" />

            <div class="border border-primary border-5 @ViewData["cerrar"] flex-row justify-content-between align-content-center d-none text-center "><p class=" m-2 text-center" >@ViewData["Respuesta"]</p> <a asp-page-handler="Cerrar" value="true" cerrar class="btn btn-danger text-white text-center m-2 font-weight-bold">x</a></div>

            <button type="submit" class="btn btn-primary m-2" id="retirar" name="retirar" value="True">Retirar</button>

        </form>
    
</div>


<div class="container bg-dark text-white mt-5 p-4">
    <h4>Monto disponible del cajero</h4>
    @foreach (var item in Model.DatosCajero)
    {
        <p>Billetes de 1000: @item.BilletesMil </p>
        <p>Billetes de 500: @item.BilletesQuiniento  </p>
        <p>Billetes de 100: @item.BilletesCien  </p>

    }

    <p>Total disponible: RD$@Model.TotalCajero()</p>
    


    <form method="get">
        <button type="submit" class="btn btn-success" name="Recargar" value="True">Recargar</button>

    </form>


</div>




